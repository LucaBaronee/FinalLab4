 @model Stock1.Models.Categoria

@{
    ViewData["Title"] = "Eliminar";
}

<h1 class="text-center mb-4">Eliminar Categoría</h1>

<div class="container">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h5 class="card-title mb-0">Confirmación de Eliminación</h5>
        </div>
        <div class="card-body">
            <h4 class="mb-4">¿Estás seguro de que deseas eliminar esta categoría?</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.descripcion)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.descripcion)
                </dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                <a asp-action="Index" class="btn btn-secondary btn-sm">Volver al Listado</a>
            </form>
        </div>
    </div>
</div>