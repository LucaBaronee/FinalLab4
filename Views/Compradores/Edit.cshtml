@model Stock1.Models.Comprador

@{
    ViewData["Title"] = "Editar Comprador";
}

<div class="container my-5">
    <h1 class="text-center display-5 mb-4">@ViewData["Title"]</h1>

    <div class="card shadow-lg">
        <div class="card-header bg-warning text-white">
            <h5 class="mb-0">Editar Datos del Comprador</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <input type="hidden" asp-for="Id" />

                <div class="form-group row mb-3">
                    <label asp-for="nombre" class="col-sm-2 col-form-label font-weight-bold"></label>
                    <div class="col-sm-10">
                        <input asp-for="nombre" class="form-control form-control-lg" placeholder="Ingrese el nombre del comprador" />
                        <span asp-validation-for="nombre" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="apellido" class="col-sm-2 col-form-label font-weight-bold"></label>
                    <div class="col-sm-10">
                        <input asp-for="apellido" class="form-control form-control-lg" placeholder="Ingrese el apellido del comprador" />
                        <span asp-validation-for="apellido" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="dni" class="col-sm-2 col-form-label font-weight-bold"></label>
                    <div class="col-sm-10">
                        <input asp-for="dni" class="form-control form-control-lg" placeholder="Ingrese el DNI del comprador" />
                        <span asp-validation-for="dni" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="foto" class="col-sm-2 col-form-label font-weight-bold"></label>
                    <div class="col-sm-10">
                        @if (!string.IsNullOrEmpty(Model.foto))
                        {
                            <img src="~/fotos/@Model.foto" class="img-thumbnail" style="max-width:150px;" />
                        }
                        else
                        {
                            <span class="text-muted">No Image</span>
                        }
                        <input type="file" id="foto" name="foto" accept="image/*" class="form-control mt-3" />
                        <span asp-validation-for="foto" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row justify-content-center mb-3">
                    <div class="col-sm-10">
                        <input type="submit" value="Guardar Cambios" class="btn btn-success btn-lg w-100" />
                    </div>
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="bi bi-arrow-left-circle"></i> Volver a la lista
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}