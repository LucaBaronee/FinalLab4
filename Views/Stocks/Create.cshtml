@model Stock1.Models.Stock

@{
    ViewData["Title"] = "Create";
}
<h1 class="text-center mb-4">Compra de Producto</h1>

<h4 class="text-center mb-4">Formulario de Stock</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">Registrar Compra</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group">
                        <label asp-for="cantidad" class="control-label">Cantidad</label>
                        <input asp-for="cantidad" class="form-control" placeholder="Ingrese la cantidad" />
                        <span asp-validation-for="cantidad" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="fecha" class="control-label">Fecha de Compra</label>
                        <input asp-for="fecha" class="form-control" type="date" />
                        <span asp-validation-for="fecha" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="productoId" class="control-label">Producto</label>
                        <select asp-for="productoId" class="form-control" asp-items="ViewBag.productoId">
                            <option value="">Seleccione un producto</option>
                        </select>
                        <span asp-validation-for="productoId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="compradorId" class="control-label">Comprador</label>
                        <select asp-for="compradorId" class="form-control" asp-items="ViewBag.compradorId">
                            <option value="">Seleccione un proveedor</option>
                        </select>
                        <span asp-validation-for="compradorId" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-success btn-block">Registrar Compra</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-danger">Volver</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}