 @model Stock1.Models.Stock

@{
    ViewData["Title"] = "Venta";
}

<h1 class="text-center mb-4">Venta de Producto</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">Formulario de Venta</h5>
            </div>
            <div class="card-body">
                <form asp-action="Venta" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group">
                        <label asp-for="cantidad" class="control-label">Cantidad</label>
                        <input asp-for="cantidad" class="form-control" placeholder="Ingrese cantidad" />
                        <span asp-validation-for="cantidad" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="fecha" class="control-label">Fecha de Venta</label>
                        <input asp-for="fecha" class="form-control" placeholder="Seleccione la fecha" type="date" />
                        <span asp-validation-for="fecha" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="productoId" class="control-label">Producto</label>
                        <select asp-for="productoId" class="form-control" asp-items="ViewBag.productoId">
                            <option value="">Seleccione un producto</option> <!-- Placeholder de selección -->
                        </select>
                        <span asp-validation-for="productoId" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary btn-block">Realizar Venta</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver al Inventario</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}